# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key
OLLAMA_BASE_URL=http://localhost:11434
VLLM_BASE_URL=http://localhost:8000
MCP_SERVER_URL=http://localhost:3000

# ServiceNow Configuration
SERVICENOW_INSTANCE=your_instance_name
SERVICENOW_USERNAME=your_username
SERVICENOW_PASSWORD=your_password

# ServiceNow API Settings
SERVICENOW_API_ENDPOINT=https://${SERVICENOW_INSTANCE}.service-now.com/api
SERVICENOW_API_VERSION=v1

# ServiceNow OAuth (Optional)
SERVICENOW_CLIENT_ID=your_client_id
SERVICENOW_CLIENT_SECRET=your_client_secret

# ServiceNow Table Names
SERVICENOW_INCIDENT_TABLE=incident
SERVICENOW_USER_TABLE=sys_user
SERVICENOW_CMDB_TABLE=cmdb_ci

# Other Settings
SERVICENOW_TIMEOUT=30
SERVICENOW_MAX_RETRIES=3
SERVICENOW_LOG_LEVEL=INFO